<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_bg"
    tools:context=".ui.mainApp.MiniPlayerFragment">

    <TextView
        android:id="@+id/nameTrack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Name Track"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.2"/>

    <TextView
        android:id="@+id/artistTrack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Artist Track"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/nameTrack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.2"/>

    <View
        android:id="@+id/play_pause_hide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/nameTrack"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_play"
        app:layout_constraintWidth_percent="0.11"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias="0.3"/>

    <View
        android:id="@+id/close"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/play_pause_hide"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_close"
        app:layout_constraintWidth_percent="0.11"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>