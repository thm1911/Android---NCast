<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_bg"
    tools:context=".ui.mainApp.profile.changePassword.ChangePasswordFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardElevation="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeMinTextSize="20sp"
            android:autoSizeTextType="uniform"
            android:background="@color/black_bg"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:text="@string/change_password"
            android:textColor="@color/green"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:fontFamily="@font/montserrat_semibold"
        android:id="@+id/text2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/cur_password"
        android:textColor="@color/white_blur"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHeight_percent="0.04"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintVertical_bias="0.05"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cur_password_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/text2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintVertical_bias="0"
        app:helperTextTextColor="@color/red"
        app:hintEnabled="false"
        app:startIconDrawable="@drawable/ic_pass"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/green"
        app:startIconTint="@color/green">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/cur_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_text"
            android:hint="@string/enter_your_current_password"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="15sp"
            android:textColorHint="@color/input_color"
            android:textColor="@color/white_blur"
            android:inputType="textPassword"
            android:paddingStart="45sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/text3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/new_password"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/white_blur"
        app:layout_constraintTop_toBottomOf="@id/cur_password_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHeight_percent="0.04"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintVertical_bias="0"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_password_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/text3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintVertical_bias="0"
        app:helperTextTextColor="@color/red"
        app:hintEnabled="false"
        app:startIconDrawable="@drawable/ic_pass"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/green"
        app:startIconTint="@color/green">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_text"
            android:hint="@string/enter_your_new_password"
            android:textColorHint="@color/input_color"
            android:textSize="15sp"
            android:textColor="@color/white_blur"
            android:inputType="textPassword"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingStart="45sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/text4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/white_blur"
        android:text="@string/cf_new_password"
        app:layout_constraintTop_toBottomOf="@id/new_password_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHeight_percent="0.04"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintVertical_bias="0"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cf_new_password_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/text4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintVertical_bias="0"
        app:helperTextTextColor="@color/red"
        app:hintEnabled="false"
        app:startIconDrawable="@drawable/ic_pass"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/green"
        app:startIconTint="@color/green">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/cf_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_text"
            android:hint="@string/enter_your_new_password"
            android:textColorHint="@color/input_color"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/white_blur"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:paddingStart="45sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/forgot_password"
        app:layout_constraintTop_toBottomOf="@id/cf_new_password_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        android:textColor="@color/black"
        android:gravity="end"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintVertical_bias="0"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeMaxTextSize="15sp"
        android:autoSizeTextType="uniform"/>

    <Button
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/forgot_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintWidth_percent="0.25"
        android:background="@drawable/cancel_button"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.5"
        android:text="Cancel"
        android:textColor="@color/black"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/save"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/forgot_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/cancel"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintWidth_percent="0.25"
        android:background="@drawable/button"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/save"
        android:textAllCaps="false"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintVertical_bias="0"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>