<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.mainApp.profile.ProfileFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardElevation="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeMinTextSize="20sp"
            android:autoSizeTextType="uniform"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/profile"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/image_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintDimensionRatio="1:1"
        app:cardCornerRadius="100sp"
        app:cardElevation="5sp"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_circle_shape"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_app" />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/infor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/image_layout"
        app:layout_constraintBottom_toBottomOf="@id/image_layout"
        app:layout_constraintStart_toEndOf="@id/image_layout"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHorizontal_bias="0.05">

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintVertical_bias="0"
            android:drawableStart="@drawable/ic_profile"
            android:drawableTint="@color/main"
            android:text="pt"
            android:textColor="@color/black"
            android:gravity="center|start"
            android:drawablePadding="10sp"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/username"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawableStart="@drawable/ic_email"
            android:textColor="@color/black"
            android:text="hihi@gmail.com"
            android:gravity="center|start"
            android:drawablePadding="10sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/change_pass_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/image_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintVertical_bias="0.05"
        app:cardCornerRadius="10sp"
        app:cardElevation="10sp">

            <TextView
                android:id="@+id/change_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.6"
                app:layout_constraintHorizontal_bias="0"
                android:paddingStart="10dp"
                android:drawableStart="@drawable/ic_password"
                android:drawableTint="@color/main"
                android:text="@string/change_password"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center|start"
                android:drawablePadding="10sp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/about_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/change_pass_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintVertical_bias="0.05"
        app:cardCornerRadius="10sp"
        app:cardElevation="10sp">

        <TextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHorizontal_bias="0"
            android:paddingStart="10dp"
            android:drawableStart="@drawable/ic_about"
            android:drawableTint="@color/main"
            android:text="@string/about"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center|start"
            android:drawablePadding="10sp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/logout_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/about_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintVertical_bias="0.05"
        app:cardCornerRadius="10sp"
        app:cardElevation="10sp">

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHorizontal_bias="0"
            android:drawableStart="@drawable/ic_logout"
            android:drawableTint="@color/main"
            android:text="Log out"
            android:paddingStart="10dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center|start"
            android:drawablePadding="10sp"/>

    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94"/>

</androidx.constraintlayout.widget.ConstraintLayout>